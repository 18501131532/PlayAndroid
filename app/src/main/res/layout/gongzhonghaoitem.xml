<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:transitionName="mybotton"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCard"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        >
        <ImageView
            android:layout_margin="@dimen/dp_8"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/icon_author"
            />
        <TextView
            android:id="@+id/name"
            android:text="郭霖"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tag"
            android:text="公众号/郭霖"
            android:textAlignment="center"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="#01AAFE"
            android:layout_marginLeft="@dimen/dp_180"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/content"
            android:text="分享一个我开发的MVVM框架的开源小项目"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/home_page_itemlist_like"
            android:layout_marginTop="@dimen/dp_75"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:contentDescription="@null"
            android:layout_marginBottom="@dimen/dp_3"
            android:src="@drawable/icon_like_article_not_selected" />
        <ImageView
            android:id="@+id/home_page_itemlist_like1"
            android:layout_marginTop="@dimen/dp_75"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:contentDescription="@null"
            android:layout_marginBottom="@dimen/dp_3"
            android:src="@drawable/ic_time" />
        <TextView
            android:id="@+id/date"
            android:text="2019-03-01"
            android:layout_marginLeft="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_75"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

</LinearLayout>
