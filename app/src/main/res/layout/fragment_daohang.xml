<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/search_status_bar_white"
    android:orientation="horizontal"
    tools:context=".playandroid.daohang.DaohangFragment">

    <include
        layout="@layout/loading_view"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv1_daohang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5" />

    <View
        android:id="@+id/navigation_divider"
        android:layout_width="@dimen/dp_3"
        android:layout_height="match_parent"
        android:background="@color/comment_line" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_daohang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_weight="2" />

</LinearLayout>
</LinearLayout>